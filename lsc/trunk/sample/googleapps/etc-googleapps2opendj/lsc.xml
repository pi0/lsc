<?xml version="1.0" ?>
<lsc xmlns="http://lsc-project.org/XSD/lsc-core-2.0.xsd" revision="1">
  <connections id="2">
    <ldapConnection>
      <name>opends-dst-conn</name>
      <url>ldap://127.0.0.1:33389/dc=lsc-project,dc=org</url>
      <username>cn=Directory Manager</username>
      <password>secret</password>
      <authentication>SIMPLE</authentication>
      <referral>IGNORE</referral>
      <derefAliases>NEVER</derefAliases>
      <version>VERSION_3</version>
      <pageSize>-1</pageSize>
      <factory>com.sun.jndi.ldap.LdapCtxFactory</factory>
      <tlsActivated>false</tlsActivated>
    </ldapConnection>
    <googleAppsConnection>
    	<name>googleapps-src-conn</name>
    	<!-- The URL for Google Apps connection is the domain  -->
    	<url>domain.com</url>
    	<username>admin@domain.com</username>
    	<password>XXXXXXXXX</password>
    </googleAppsConnection>
  </connections>
  <audits>
	<ldifAudit>
		<name>ldif</name>
		<append>false</append>
		<file>/tmp/audit.ldif</file>
	</ldifAudit>
  </audits>
  <tasks>
    <task>
      <name>Accounts</name>
      <bean>org.lsc.beans.SimpleBean</bean>
      <googleAppsSourceService>
        <name>googleapps-dst-service</name>
        <connection reference="googleapps-src-conn" />
        <apiCategory>UserAccounts</apiCategory>
      </googleAppsSourceService>
      <ldapDestinationService>
        <name>opends-source-service</name>
        <connection reference="opends-dst-conn" />
        <baseDn>ou=People,dc=lsc-project,dc=org</baseDn>
        <pivotAttributes>
          <string>uid</string>
        </pivotAttributes>
        <fetchedAttributes>
          <string>givenName</string>
          <string>sn</string>
          <string>userPassword</string>
          <string>uid</string>
          <string>mail</string>
          <string>cn</string>
          <string>objectClass</string>
        </fetchedAttributes>
        <getAllFilter>(&amp;(objectClass=inetorgperson)(uid=*)(sn=*)(givenName=*))</getAllFilter>
        <getOneFilter>(&amp;(objectClass=inetorgperson)(uid={id})(sn=*)(givenName=*))</getOneFilter>
      </ldapDestinationService>
      <propertiesBasedSyncOptions>
        <mainIdentifier>"uid=" + srcBean.getDatasetFirstValueById("uid") + ",ou=People,dc=lsc-project,dc=org"</mainIdentifier>
        <defaultDelimiter>;</defaultDelimiter>
        <defaultPolicy>FORCE</defaultPolicy>
        <dataset>
          <name>objectClass</name>
          <policy>KEEP</policy>
          <createValues>
            <string>"inetOrgPerson"</string>
            <string>"organizationalPerson"</string>
            <string>"person"</string>
            <string>"top"</string>
          </createValues>
        </dataset>
        <dataset>
          <name>cn</name>
          <policy>FORCE</policy>
          <forceValues>
            <string>srcBean.getDatasetFirstValueById("givenName") + " " + srcBean.getDatasetFirstValueById("sn")</string>
          </forceValues>
        </dataset>
      </propertiesBasedSyncOptions>
    </task>
  </tasks>
</lsc>
